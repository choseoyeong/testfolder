public class DiceC {
	
	///Field
	private int value;

	///Constructor
	public DiceC() {
		System.out.println("::"+getClass().getName()+" ?ƒ?„±?....");
	}

	//Method (getter/setter)
	public int getValue() {
		return value;
	}
	public void setValue(int value) {
		this.value = value;
	}
	
	//==> ì£¼ì‚¬?œ„ë¥? ?˜?? ?„ ?ƒ?˜?Š” ?ˆ«?ë¥? ?ƒ?‚°?•˜?Š” ?–‰?œ„(ë¬´ì‘?œ„ë¡? ?ˆ«? ?ƒ?‚°)
	public void selectedNumber(){
		value = new Random().nextInt(6) + 1;
	}
	
}//end of class