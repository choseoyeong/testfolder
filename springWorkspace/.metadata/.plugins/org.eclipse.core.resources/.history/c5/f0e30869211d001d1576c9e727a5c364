package spring.service.dice.play;

import spring.service.dice.DiceA;

/*
 *	FileName : Player01.java
 *	?…‡ DiceA ?„ ê°?ì§?ê³?(?, has a :: Association Relationship)?žˆ?Š” Player Object Modeling
 *  ?…‡DiceA ë¥? ?‚¬?š© ?•©?„ ë¦¬í„´?•˜?Š” Method ? •?˜  
 */
public class Player01 {
	
	///Field
	private DiceA diceA = new DiceA();
	private int totalValue;
	
	///Constructor Method
	public Player01() {
	}
	
	///Method (getter/setter)
	public DiceA getDiceA() {
		return diceA;
	}
	public void setDiceA(DiceA diceA) {
		this.diceA = diceA;
	}
	public int getTotalValue() {
		return totalValue;
	}
	public void setTotalValue(int totalValue) {
		this.totalValue = totalValue;
	}
	
	//==> count ë§Œí¼ ì£¼ì‚¬?œ„ë¥? êµ´ë ¤?„œ ?•©?„ ?›„?•˜?Š” ?–‰?œ„
	public void playDice(int count){
		
		System.out.println("==>"+getClass().getName()+".playDice() start....");

		for (int i = 0; i < count; i++) {
			diceA.selectedNumber();
			System.out.println("::[ "+diceA.getClass().getName()+" ] ?˜ ?„ ?ƒ?œ?ˆ˜ : "+diceA.getValue());
			totalValue += diceA.getValue(); 
		}
		
		System.out.println("==>"+getClass().getName()+".playDice() end....");
	}

}//end of class