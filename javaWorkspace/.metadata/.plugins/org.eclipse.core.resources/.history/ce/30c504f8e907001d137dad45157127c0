package com.edu.bank;

public class Customer {
	//1. 필드 선언
	//생성자 주입
	private int ssn;
	private String name;
	
	//Has a Relation
	//setter주입
		
	//2. 선언한 필드값을 각각 주입한다.
	public Customer(int ssn, String name) {
		super();
		this.ssn = ssn;
		this.name = name;
	}	

	/////////////////////////////////////////////////
	
	//고객의 정보를 반환
	public String getCustomerInfo() {
		return ssn+", "+ name;
	}	
}



















