<script>
$(function() {
	$('#addOptionBtn').bind('click', function() {
		var arr= ['경렬','유진','재호','승민','채원','태경','효석'];
		//1. each() 사용해서 배열안의 친구들의 이름을 select>option 만들어서 붙임....append()
		$.each(arr, function (index, item) {
    		$('#friend').append(item);
		});
		
		alert(friend.toString());
	
		
		
	
		
	});//one
});//ready
