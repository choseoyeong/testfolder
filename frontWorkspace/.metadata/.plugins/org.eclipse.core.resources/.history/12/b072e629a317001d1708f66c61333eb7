<script>
	$(function() {
		// 1. body의 모든 태그를 선택자로 지정...color를 purple
		$('body *').css('color', 'purple');
		
		// 2. body의 직계자식을 선택자로 지정...border 2px solid tomato
		$('body>*').css('border', '2px solid tomato');
	});
</script>
