<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
	$(function(){
		// 버튼 클릭하면 함수 호출하도록
		$('button').click(function () {
    		var text1 = "<p>Text.</p>";
    		var text2 = $('p').text();	// This is a paragraph.
    		alert(text2);
    		var text3 = $('p').val();	// X. form값 받아올 때만 사용. content 받아올 땐 사용 불가
    		alert(text3);
		});
	});
</script>
